@require '../variable.styl'

.page-news
  .content
    display block
    margin-top $newspage-nav-height
    // bottom $newspage-nav-height
    width 100%
    margin-left 15px

  .news-text
    // float left
    width 65%
    p
      margin 10px 0
      line-height 1.5em

  .directory
    height 50px
    font-size 0.95em
    line-height 50px
    color #696969

  .change-lang
    float right
    margin-right 65px

  .news-title
    margin auto
    width 100%
    font-size 1.8em
    text-align center

  .news-date
    line-height 3em
    margin auto
    width 100%
    font-size 1.2em
    text-align center
    color $highlight-blue

  .news-footer
    display block
    // position absolute
    // bottom 0
    min-height 150px
    width 100%
    margin-top 65px
    background #332f2e
    padding-left 15px

  .block-blank
    width 100%
    height 20px

  .footer-content
    display inline-flex
    width 100%

  .footer-list
    display block
    color lightgrey
    width 180px

  .footer-list-title
    color #ffffff
    font-size 1.15em
    line-height 2.5em

  .footer-list-item
    margin-left 15px

  .news-footer-author
    margin-top 30px
    line-height 50px
    height 50px
    font-size 1.05em
    color #ffffff