@require '../variable.styl'

// 防冲突暂时先写在这个文件里
// info-list-sidebar
$info-list-width = 300px
$info-list-padding = 25px
$info-list-bgcolor = rgba(239, 239, 239, 1)


.info-list-sidebar
  width $info-list-width - 2 * $info-list-padding
  padding $info-list-padding
  min-height 750px
  height 100%
  background $info-list-bgcolor
  color #696969
  border-color #a9a9a9

.box-search
  margin auto
  width 100%
  display block
  height 2.4em
  text-align center
  line-height 2.4em

.info-sidebar-search-input
  border none
  width 85%
  font-size 1.1em
  height 1.4em
  border-bottom solid 1px
  border-color darkgrey
  background none
  outline none
  color #696969

.info-sidebar-search-btn
  width 15%
  border none
  background none
  outline none
  font-size 1.3em
  color #696969
  text-align center

.box-label-title
  display block
  margin-top 25px

  width 100%
  height 2em
  line-height 1.8em
  border-top solid 1px
  border-bottom solid 1px
  color #444444
  border-color #a9a9a9
  text-align center
  vertical-align center
  /*padding-top 0.4em*/
  /*padding-bottom 0.4em*/
  font-size 1.25em
  padding-right 15px

.box-categories-container
  margin 10px 0
  font-size 1.05em
  line-height 35px
  transition height .2s linear

.box-category
  margin 5px 0
  cursor pointer

.category-title
  color #444444
  font-size 1.1em
  padding-left 10px
  transition background .2s linear, color .2s linear
  border-radius 4px

.category-title:hover
  background #a9a9a9
  color white

.category-secondary-box
  padding-left 0

.category-secondary
  border-radius 4px
  padding-left 35px
  transition background .2s linear, color .2s linear

.category-secondary:hover
  background #a9a9a9
  color white