@require '../variable.styl'

.page-news
  .news-list-container
    // padding-top $newspage-nav-height + 10px
    display block
    width 100%
    // margin-left 15px

  .month-container
    display block
    width 100%

  .month-title
    width 100%
    font-size 1.55em
    line-height 2em
    color #696969

  .grid-container
    display flex
    flex-wrap wrap
    width 100%

  .news-abstract-container
    display block
    width 32.3%
    // min-width (1250 / 3)px
    line-height 1.5em
    margin-right 10px
    margin-top 20px

  .news-left
    display block
    float left
    width 70px
    margin-left 10px
    margin-right 10px
    min-height 100%

  .news-right
    float left
    min-height 100%
    width 310px

  .news-abstract-date
    display block
    font-size 2em
    color $highlight-blue
    text-align center
    line-height 1.2em

  .news-year-month
    color #696969
    font-size 1em
    text-align center

  .news-abstract-title
    font-size 1.2em
    line-height 1.5em

  .news-abstract
    color #696969
    font-size 1em
    line-height 1.5em
    margin-top 10px