.page-teachers-list
  display block

  .teacher-list-container
    margin-top 0px

  /*.content-wrap*/
    /*overflow auto*/

  .directory
    color dimgrey
    line-height 50px

  .teacher-list-slides
    display block

  .slider-wrapper
    width: 80%;
    margin-top 100px

  .slides-container
    width 100%

  .slide-wrapper
    display inline-block
    margin-top 0px
    width 100%
    height 440px

  .slides-container
    overflow hidden
    display inline-block

  #slider
    display block
    width 300%
    height 100%
    .slide-imgs
      display inline-block
    img
      width 1250px !important
      height 440px !important
      float left
      transition all ease-in-out .8s

  #next, #prev
    position absolute
    z-index 999
    top 50px
    height 440px !important
    width 100px
    background none
    border none
    font-size 3em
    color white
    opacity 0.3
    outline none
    transition all linear .2s

  #next:hover, #prev:hover
    opacity 1

  #prev
    left 0

  #next
    right 0

  .move-left
    margin-left -100%

  .slide-dots
    z-index 1000
    position absolute
    bottom 6px
    display table
    text-align center
    width 1250px!important
    margin 0 auto
    button
      width 25px!important
      height 25px!important
      margin 0 2px
      border none
      outline none
      background none
      color white
    .activated
      color $highlight-blue
      