@require '../variable.styl'

$sub-bgcolor = rgba(239, 239, 239, 1)

.email
	background #FFFFFF
	height 100%
	width 100%
	transition all 1s $easeOutCubic

	h1, h2, h3
		font-weight 200
	
	header
		color #999999
		padding 0 20px 0 20px

	h1
		font-size 1.5em
		margin 20px 0 5px 0

	.email-container
		height 80%
		padding 0 20px 0 20px
		
	h2
		font-size 1.5em
		margin 20px 0 5px 0
		
	h3
		color #AAAAAA
		padding 0 30px 0 30px
		margin 0 0 15px 0

	.content, .email-container a
		padding 0 30px 0 30px
		margin 15px 0 15px 0

	.content div
		color #000000
	
	.email-footer
		line-height 20px
		height 40px
		font-size 0.8em
		background #EFEFEF
		color #999999
		padding 30px 30px 30px 30px

	a
		color #0A95F2
		text-decoration none
		margin 10px 0 10px 0

	label
		color #B67F64