@require '../variable.styl'

.page-index
  display block
  position relative
  width 100%
  height 100%
  background-image url('../resources/temp_bg.jpg')


  header
    display block
    position relative
    height $nav-height
    width 100%
    // height $nav-height
    color #ffffff

  .nav-title
    @extends .vertical-container

    float left
    margin auto
    padding auto
    height 100%
    width 25%
    text-align center
    vertical-align middle
    font-size $nav-main-item-font-size
    background $background-black
    cursor pointer
    a
      @extends .vertical-container
      transition all 0.5s ease-out
      height 100%
      width 100%

    :hover, :focus
      background-color: $background-black-darken

  .nav-lists-container
    display inline-block
    position relative
    // top $nav-height
    height 100%
    margin 0 0 0 0
    padding 0 0 0 0
    width 100%

  .nav-list
    display block
    float left
    width 25%
    height 100%
    cursor pointer
    background $background-black
    transition all 0.5s ease-out
    ul
      height 100%
      font-size $list-item-primary-font-size
      list-style none

  .list-item-primary
    display block
    width 95%
    height $list-item-primary-line-height
    line-height $list-item-primary-line-height
    vertical-align middle
    padding-left 5%
    color white
    transition all 0.5s ease-out

  .list-item-primary:hover, :focus
    width 90%
    padding-left 10%
    background-color: $background-black-darken
    color $highlight-blue

  .list-item-secondary
    @extends .page-index .list-item-primary
    width 90%
    padding-left 10%

  .list-item-secondary:hover, :focus
    width 85%
    padding-left 15%
    color $highlight-blue
    background-color: $background-black-darken

  footer
    display block
    position fixed
    bottom 0

    width 100%
    height 5%

    background $background-black

  // Anmation effects
  .list-hidden
    height 0px
    ul
      display none
      opacity 0