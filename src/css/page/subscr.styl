@require '../variable.styl'

$sub-bgcolor = rgba(239, 239, 239, 1)

.sub
	background #EFEFEF
	overflow hidden

	html, body
		height 100%

	header, form, h1, h2, h3, #sub-prompt
		transition all 1s $easeOutCubic
		
	#unsub
		position relative
		margin 20px auto 150px auto
		width 600px
		height 280px
		background #FFFFFF
		background-image url(../resources/subscribe_bg-01.png)
		background-repeat no-repeat
		background-position 105% 105%
		box-shadow 0px 5px 20px #CCCCCC
		
	#unsub-prompt
		position absolute
		text-align center
		color #717171
		font-weight 100
		font-size 1.5em
		height 200px
		width 350px
		overflow hidden
		padding 50px 125px 50px 125px

	.container
		position relative
		margin 20px auto 150px auto
		width 600px
		height 400px
		background #FFFFFF
		background-image url(../resources/subscribe_bg-01.png)
		background-repeat no-repeat
		background-position 105% 105%
		padding 50px
		box-shadow 0px 5px 20px #CCCCCC

	.center-box
		position relative

	.center-box h2
		margin 0
		color #717171
		font-size 2em
		font-weight 100

	.center-box h3
		font-size 1.1em
		font-weight 200
		color #474445

	.class-layer
		margin-right 10px
		margin-buttom 5px

	.sub-navigator
		height 200px

	.sub-blue-bar
		background rgb(75, 150, 200)
		height 10px
		margin-left -15px

	.sub-form
		position relative
		height 80%
		font-family $sse-font-family
		color #999999
		text-shadow 0.1px 0.1px 0.1px #FFF
		border1px solid #DDD
		border-radius 5px

	.user-mail
		font-size 1em
		color #717171
		font-weight 100

	.sub-form .button
		padding 5px 25px 5px 25px
		margin-top 10px
		width 150px
		height 40px
		float left
		color #FFFFFF

	.sub-form .button-sub
		border 0
		background #6C8AA3
		margin-left 150px

	.sub-form .button-unsub
		border 0
		color #727272
		background transparent

	.sub-form .button-sub:hover
		background #6C9CA3
		color #696969
		border-color #ADADAD

	.sub-form .button-sub:active
		border 2px solid #ADADAD
		outline none /* hide dotted outline in Firefox */
		animation  none

	.sub-form .button-unsub:hover
		background #CCCCCC

	.sub-form input[type=checkbox].css-checkbox
		position absolute
		overflow hidden
		clip rect(0 0 0 0)
		height 1px
		width 1px
		margin -1px
		padding 0
		border 0

	.sub-form input[type=checkbox].css-checkbox + label.css-label
		padding-left 20px
		height 15px 
		display inline-block
		line-height 15px
		background-repeat no-repeat
		background-position 0 0
		font-size 1em
		vertical-align middle
		cursor pointer
		margin 10px 0 10px 0
		user-select none

	.sub-form input[type=checkbox].css-checkbox:checked + label.css-label
		background-position 0 -15px

	.sub-form .depressed
		background-image url(../resources/depressed.png)

	#sub-prompt
		position absolute
		color #717171
		font-weight 100
		height 100px
		width 350px
		overflow hidden
		padding 150px 125px 200px 125px

	#sub-prompt p
		text-align center
		width 200px
		margin 20px auto 10px auto
		font-size 1.5em

	#sub-prompt div, #unsub-prompt div
		font-size 0.8em
		margin-left auto
		margin-right auto
		width 150px

	#sub-prompt button
		color #0A95F2
		background transparent
		border 0
		width 50%
		float left
		margin-left auto
		margin-right auto
		
	#unsub-prompt button
		width 75px
		color #0A95F2
		background transparent
		border 0
		float left
		margin-left auto
		margin-right auto
		font-size 0.8em

	.invi
		opacity 0
		z-index -1

	.front-div
		z-index 10

	.opaque
		opacity 0.3
		// filter blur(2px)