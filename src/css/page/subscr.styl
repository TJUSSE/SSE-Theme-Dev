@require '../variable.styl'

$sub-bgcolor = rgba(239, 239, 239, 1)

.container
	position absolute
	// transition all 2.2s $easeOutCubic
	margin-left 10%
	margin-right 10%
	width 100%
	height 100%
	// background $sub-bgcolor
	overflow scroll
	outline none

.center-box
	position relative
	margin-left auto
	margin-right auto
	width 50%
	top 50px
	height 80%

.sub-form
	margin-left auto
	margin-right auto

	// max-width 500px
	// background #FFF
	padding 20px 30px 20px 30px
	height 80%
	width 95%
	font-family $sse-font-family
	// font 12px "Helvetica Neue", Helvetica, Arial, sans-serif
	// color #888
	color #696969
	text-shadow 0.1px 0.1px 0.1px #FFF
	border1px solid #DDD
	border-radius 5px
	
//.sub-form input[type='checkbox']
//	display none

.sub-form div
	float left
	height 100%
	width 33%

.sub-form label, h2
	width 90%
	float left
	margin 10px
	user-select none

.sub-form .button
	position fixed
	background transparent
	border 1px solid #CCC
	padding 10px 25px 10px 25px
	top 400px
	width 10%
	// color #333
	color #696969
	border-radius 4px
	float left

.sub-form .button:hover
	color #696969
	border-color #ADADAD
	
.sub-form .button:active
	border 2px solid #ADADAD
	outline none /* hide dotted outline in Firefox */
	animation  none
	
.sub-form input[type=checkbox].css-checkbox
	position absolute 
	overflow hidden 
	clip rect(0 0 0 0) 
	height 1px 
	width 1px 
	margin -1px 
	padding 0
	border 0

.sub-form input[type=checkbox].css-checkbox + label.css-label
	padding-left 20px
	height 15px 
	display inline-block
	line-height 15px
	background-repeat no-repeat
	background-position 0 0
	font-size large
	vertical-align middle
	cursor pointer

.sub-form input[type=checkbox].css-checkbox:checked + label.css-label
	background-position 0 -15px

.sub-form .depressed
	background-image url(../resources/depressed.png)