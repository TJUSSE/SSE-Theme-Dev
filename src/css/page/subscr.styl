@require '../variable.styl'

.container
	position absolute
	transition all 2.2s $easeOutCubic
	margin-left 10%
	margin-right 10%
	width 80%
	height 100%
	bottom 70px
	background $background-black-darken

.center-box
	position relative
	margin-left auto
	margin-right auto
	width 50%
	top 20%
	height 75%

/* #### bootstrap Form #### */
.sub-form
	margin-left auto
	margin-right auto

	// max-width 500px
	// background #FFF
	padding 20px 30px 20px 30px
	height 80%
	width 95%
	font-family $sse-font-family
	// font 12px "Helvetica Neue", Helvetica, Arial, sans-serif
	// color #888
	color #fff
	text-shadow 0.1px 0.1px 0.1px #FFF
	border1px solid #DDD
	border-radius 5px
	
.sub-form div
	float left
	height 100%
	width 33%

.sub-form label
	width 90%
	float left
	margin 0px 0px 5px
	user-select none

.sub-form select
	background #FFF url('down-arrow.png') no-repeat right
	background #FFF url('down-arrow.png') no-repeat right
	appearance none
	text-indent 0.01px
	text-overflow ''
	width 80%
	height 35px
	line-height 15px

.sub-form .button
	position fixed
	background transparent
	border 1px solid #CCC
	padding 10px 25px 10px 25px
	top 50%
	width 10%
	// color #333
	color #fff
	border-radius 4px
	float left

.sub-form input[type=checkbox].css-checkbox
	padding-left 20px
	height 15px 
	display inline-block
	line-height 15px
	background-repeat no-repeat
	background-position  0 0
	font-size 15px
	vertical-align middle
	cursor pointer
	background-image url('../resources/depressed.png')

.sub-form input[type=checkbox].css-checkbox:checked
	background-position  0 -15px

.depressed
	background-image url('../resources/depressed.png')
	
.sub-form input[type=checkbox].css-checkbox.sme
	padding-left 22px
	height 16px 
	display inline-block
	line-height 16px
	background-repeat no-repeat
	background-position  0 0
	font-size 15px
	vertical-align middle
	cursor pointer

.sub-form input[type=checkbox].css-checkbox.sme:checked
	background-position  0 -16px

.sub-form .button:hover
	color #333
	background-color #EBEBEB
	border-color #ADADAD
	
.sub-form .button:active
	color  #fff
	text-shadow  0 -1px 0 #444, 0 0 5px #ffd, 0 0 8px #fff
	box-shadow  0 1px 0 #666, 0 2px 0 #444, 0 2px 2px rgba(0,0,0,0.9)
	transform  translateY(3px)
	animation  none