.side-bar-selection
  position absolute
  right 50px
  display block
  width 300px
  min-height 730px
  background rgba(239, 239, 239, 1)

.side-bar-inner
  right 40px
  position absolute

.groups-title
  display block
  line-height 2.05em
  font-size 1.25em

.group-primary-box
  display block
  font-size 1.15em
  cursor pointer

.group-primary
  overflow: hidden
  color #696969
  width 130px
  line-height 1.85em

.group-secondary-box
  // display none
  overflow hidden
  opacity 0
  position absolute
  font-size 0.85em
  width 0px
  margin-top -1.85em
  right 140px
  background rgba(200, 200, 200, 1)

  transition width .2s, opacity .2s
  transition-timing-function cubic-bezier(0.215, 0.61, 0.355, 1)

.group-secondary-box-active
  opacity 1
  width 110px

.group-secondary
  overflow hidden
  line-height 1.75em
  max-height 1.75em
  padding-left 10px